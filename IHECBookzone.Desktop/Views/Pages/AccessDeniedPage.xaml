<Page
    x:Class="IHECBookzone.Desktop.Views.Pages.AccessDeniedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:IHECBookzone.Desktop.Views.Pages"
    mc:Ignorable="d"
    Title="Access Denied" Background="#f5f5f5">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Access Denied" FontSize="28" FontWeight="Bold" Foreground="#E53E3E" HorizontalAlignment="Center"/>
            <TextBlock Text="You do not have permission to access this page." FontSize="16" Foreground="#2D3748" 
                       Margin="0,15,0,0" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            
            <Image Source="/IHECBookzone.Desktop;component/Resources/Images/access_denied.png" Width="150" Margin="0,30,0,30" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
            
            <Button x:Name="BackButton" Content="Go to Home Page" Width="150" Height="40" 
                    Background="#3B5078" Foreground="White" Margin="0,20,0,0" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page> 